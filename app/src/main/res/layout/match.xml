<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/round"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/epl_bold"
        android:text="1R"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/opplogo"
        android:layout_marginTop="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/def"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/epl_bold"
            android:text="Team Name"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/date"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/epl_light"
            android:text="date"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/epl_light"
            android:text="time"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/stadium"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/epl_light"
            android:text="stadium"
            android:textSize="15dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_home"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/epl_bold"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/score_homeCheck"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/epl_bold"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/lose"/>

        <TextView
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/epl_bold"
            android:text="-"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/score_awayCheck"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/epl_bold"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/lose" />

        <TextView
            android:id="@+id/score_away"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/epl_bold"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zwin"
            />

    </LinearLayout>
</LinearLayout>