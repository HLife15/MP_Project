<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/epl">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/mainlogo" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/epl_bold"
        android:text="Match Schedule Viewer"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00ff85"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/def" />

    <TextView
        android:id="@+id/text_team"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/epl_bold"
        android:text="Select Your Team"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="0W 0D 0L | pts"
        android:textAlignment="center"
        android:fontFamily="@font/epl_bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ListView
        android:id="@+id/match_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"/>


</LinearLayout>